<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:onClick="selectIngredient" >
    <TextView
        android:id="@+id/ingredient_id"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/category_id"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/ingredient_thumb"
        android:scaleType="centerCrop"
        android:contentDescription="@string/name"
        android:onClick="selectIngredient"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@mipmap/ingredient_inner_shadow"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/checked"
        android:orientation="horizontal"
        android:layout_width="165dp"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        android:background="@mipmap/bg_ingredientname"
        android:onClick="selectIngredient"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:typeface="sans"
            android:textStyle="normal|bold"
            android:fontFamily="casual" />
    </LinearLayout>
</RelativeLayout>
