<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@mipmap/bg_main">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:src="@mipmap/title_goku"
        android:layout_gravity="center"
        android:contentDescription="@string/title_image" />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/buttonRecipes"
        android:src="@drawable/button_recipes"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:contentDescription="@string/button_recipes_string"
        android:onClick="toRecipes"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_alignTop="@+id/buttonIngredients"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/buttonIngredients"
        android:src="@drawable/button_ingredientsa"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:contentDescription="@string/button_ingredients_string"
        android:onClick="toIngredients"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/imageViewTitle"
        android:layout_toLeftOf="@+id/buttonRecipes"
        android:layout_toStartOf="@+id/buttonRecipes"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

</RelativeLayout>
